include "sprite.fbs";
include "font.fbs";
include "shader.fbs";
include "tileset.fbs";
include "map.fbs";
include "texture.fbs";

namespace gear.assets;

table NestedBundle {
    bundle: [ubyte] (nested_flatbuffer: "Bundle");
}


union Asset {
    Texture,
    Sprite,
    Font,
    Shader,
    TileSet,
    Map,
    NestedBundle,
}

table AssetEntry {
    name: uint64 (key, hash: "fnv1_64");
    asset: Asset;
}

table Bundle {
    assets: [AssetEntry];
}

root_type Bundle;