include "sprite.fbs";
include "font.fbs";
include "shader.fbs";
include "tileset.fbs";
include "map.fbs";

namespace gear.assets;

table NestedBundle {
    bundle: [ubyte] (nested_flatbuffer: "Bundle");
}

union Asset {
    texture: string,
    Sprite,
    Font,
    Shader,
    TileSet,
    Map,
    NestedBundle,
}

table AssetEntry {
    name: string;
    asset: Asset;
}

table Bundle {
    assets: [AssetEntry];
}

root_type Bundle;