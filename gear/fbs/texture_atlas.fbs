include "common.fbs";

namespace gear.bin;

struct UVs{
    x0: float;
    y0: float;
    x1: float;
    y1: float;
}

enum Shape:byte { Rectangle, Circle, Point }

table Object {
    name: string (key);
    shape: Shape = Rectangle;
    x: float;
    y: float;
    w: float;
    h: float;
}

table Sprite {
    name: string;
    size: fvec2;
    images: [UVs];
    objects: [Object];
}

table Atlas {
    texture: string;
    sprites: [Sprite];
}

root_type Atlas;