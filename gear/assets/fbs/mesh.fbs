include "common.fbs";

namespace gear.assets;

table Material {
    baseColor: Ref;
    normal: Ref;
    MetallicRoughness: Ref;
    AmbientOcclusion: Ref;
}


table MeshletBuffer {
    indices: [ubyte];
    positions: [ubyte];
    texcoords: [ubyte];
    normals: [ubyte];
    tangents: [ubyte];

    vertexCount: uint16;
    vertexOffsets: [int32];
    indexOffsets: [uint32];
    indexCounts: [int32];
}

table MeshPrimitive {
    indexCount: uint32;
    vertexCount: uint32;
    indices: [ubyte];
    position: [ubyte];
    texcoord: [ubyte];
    normals: [ubyte];
    tangents: [ubyte];
    material: Ref;

    meshlets: MeshletBuffer;
}

table Mesh {
    primitives: [MeshPrimitive];
}

root_type Mesh;