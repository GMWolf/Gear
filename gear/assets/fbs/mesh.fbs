include "common.fbs";

namespace gear.assets;

table Material {
    baseColor: Ref;
    normal: Ref;
    MetallicRoughness: Ref;
    AmbientOcclusion: Ref;
}

table MeshPrimitive {
    indexCount: uint32;
    vertexCount: uint32;
    indices: [ubyte];
    position: [ubyte];
    texcoord: [ubyte];
    normals: [ubyte];
    material: Ref;
}

table Mesh {
    primitives: [MeshPrimitive];
}

root_type Mesh;